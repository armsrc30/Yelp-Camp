<% layout('layout/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit <%=camp.title%></h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/campgrounds/<%=camp.id%>?_method=PUT" class="needs-validation" enctype= "multipart/form-data" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Campground Name</label>
                <input class="form-control" type="text" name="title" id="title" value="<%=camp.title%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div id="title" class="invalid-feedback">
                    Please provide a title
                </div>
            </div>
            <div class="md-3">
                <label for="location" class="form-label">Campground Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%=camp.location%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div id="location" class="invalid-feedback">
                    Please provide a location
                </div>
            </div>
            <div class="md-3">
                <label  class="form-label" for="image">Image URL</label>
                <input type="file" name="image" multiple>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div id="image" class="invalid-feedback">
                Please provide a valid image file
                </div>
            </div>
            
            <div class="md-3">
                <label for="price" class="form-label">Campground Location</label>
                <input class="form-control" type="number" name="price" id="price" value="<%=camp.price%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div id="price" class="invalid-feedback">
                     Please provide a price
                </div>
            </div>
            <div class="md-3">
                <label for="description" class="form-label">Description</label>
                <input class="form-control" type="text" name="description" id="description" value="<%=camp.description%>">
            </div>
            <div class="mb-3">
                <% camp.images.forEach(function(img, i){%>
                    <% console.log(img) %> 
                    <div class="">
                        <img src="<%=img.thumbnail%>" class="img-fluid img-thumbnail">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i %>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%=i %>">Delete Image</label>
                    </div>
                <%}) %> 
            </div>
            <div class="mb-3 mt-3">
                <button>Submit</button>
            </div>
            
        </form>
        <a href="/campgrounds/<%=camp.id%>" >Back</a>

    </div>

 

</div>